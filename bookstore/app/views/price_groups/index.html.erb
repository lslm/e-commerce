<p id="notice"><%= notice %></p>

<h1>Price Groups</h1>

<table>
  <thead>
    <tr>
      <th>Prefix</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @price_groups.each do |price_group| %>
      <tr>
        <td><%= price_group.prefix %></td>
        <td><%= price_group.description %></td>
        <td><%= link_to 'Show', price_group %></td>
        <td><%= link_to 'Edit', edit_price_group_path(price_group) %></td>
        <td><%= link_to 'Destroy', price_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Price Group', new_price_group_path %>
