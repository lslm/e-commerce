<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Year</th>
      <th>Title</th>
      <th>Publisher</th>
      <th>Edition</th>
      <th>Isbn</th>
      <th>Pages</th>
      <th>Synopsis</th>
      <th>Dimensions</th>
      <th>Barcode</th>
      <th>Active</th>
      <th>Activation reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.author %></td>
        <td><%= product.year %></td>
        <td><%= product.title %></td>
        <td><%= product.publisher %></td>
        <td><%= product.edition %></td>
        <td><%= product.isbn %></td>
        <td><%= product.pages %></td>
        <td><%= product.synopsis %></td>
        <td><%= product.dimensions %></td>
        <td><%= product.barcode %></td>
        <td><%= product.active %></td>
        <td><%= product.activation_reason %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

