<div class="card">
  <div class="card-header">
    <h1>Entradas de estoque</h1>
  </div>

  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th>Data de entrada</th>
          <th>Produto</th>
          <th>Quantidade</th>
          <th>PreÃ§o</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @stocks.each do |stock| %>
          <tr>
            <td><%= stock.created_at %></td>
            <td><%= stock.product.name %></td>
            <td><%= stock.quantity %></td>
            <td><%= stock.price %></td>
            <td><%= link_to 'Show', stock %></td>
            <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
            <td><%= button_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <hr>

    <%= link_to 'Realizar entrada de estoque', new_stock_path, class: 'btn btn-primary' %>
  </div>
</div>
