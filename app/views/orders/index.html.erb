<div class="center">
  <h1>Listing orders</h1>

  <table>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Status</th>
    </tr>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.slug, order_path(order) %></td>
        <td><%= order.user.first_name %> <%= order.user.last_name %></td>
        <td><%= order.created_at %></td>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </table>
</div>
