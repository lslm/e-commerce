<div class="center">
  <h2>Atualizar senha</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <% if resource.errors.any? %>
      <div class='alert alert-danger' role='alert'>
        <% resource.errors.full_messages.each do |error| %>
          <%= error %>
        <% end %>
      </div>
    <% end %>

    <div class='form-group'>
      <%= f.label :password, 'Senha' %>
      <%= f.password_field :password, class: 'form-control', required: true, autofocus: true %>
    </div>

    <div class='form-group'>
      <%= f.label :password_confirmation, 'Confirmação de senha', required: true %>
      <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
    </div>

    <div class='form-group'>
      <%= f.submit 'Criar nova senha', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>