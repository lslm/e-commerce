<div class="center">
  <div class="devise-edit">
    <div class="user-details">
      <p><%= @user.first_name %> <%= @user.last_name %></p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, validate: true) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <h2>Personal</h2>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :phone %>
        
        <hr>
        
        <h2>Billing address</h2>
        <%= f.input :billing_address %>
        <%= f.input :billing_suburb %>
        <%= f.input :billing_zip %>
        <%= f.input :billing_state %>
        
        <hr>
        
        <h2>Shipping address</h2>
        <%= f.input :shipping_address %>
        <%= f.input :shipping_suburb %>
        <%= f.input :shipping_zip %>
        <%= f.input :shipping_state %>
        <%= f.input :image, as: :file %>

        <hr>

        <h2>Payment method</h2>
        <%= f.input :credit_card_number %>
        <%= f.input :credit_card_name %>
        <%= f.input :credit_card_expire_date %>
        <%= f.input :credit_card_ccv %>
        
        <hr>
        <%= f.input :password, autocomplete: "off", label: "New password", hint: "Leave blank if you do not want to change it", required: false, :input_html => { :class => "edit-password" } %>
        <div class="new-password-confirmation">
          <%= f.input :password_confirmation, label: "New password confirmation", required: false %>
        </div>
        <hr>
        <%= f.input :current_password, hint: "We need your current password to confirm your changes", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
    <% end %>
    
    <br>

    <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
  </div>

</div>