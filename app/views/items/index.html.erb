<div class="products text-center">
	<div class="grid">
		<% @items.each do |item| %>
			<div class="grid-item">
				<% item.product.pictures.limit(1).each do |picture| %>
					<%= link_to image_tag(picture.image.url(:grid)), product, 'data-turbolinks' => false %>
				<% end %>
				<span>View</span>
				<p class="grid-caption"><%= item.product.name %> - $<%= number_with_precision(item.product.price, :precision => 2)%></p>
			</div>
		<% end %>
	</div>
</div>
