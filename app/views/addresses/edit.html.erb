<div class="row">
  <div class="col-md-10 center">
    <div class="card">
      <div class="card-header">
        <h1>Alterar dados de endereço</h1>
        <p class="card-description">O preenchimento de todos os campos é obrigatório</p>
      </div>
    
      <div class="card-body">
        <%= render "form" %>
      </div>
      
      <% if @address.persisted? %>
        <div class="card-footer">
          <%= button_to 'Destroy',  @address, class: 'btn btn-danger float-right', method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
